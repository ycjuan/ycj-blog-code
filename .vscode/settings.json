{
    "workbench.colorCustomizations": {
        // Make active tabe more obvious
        // https://stackoverflow.com/questions/59121072/is-there-a-way-of-making-the-active-tab-border-highlighted-on-top-instead-of-at
        "tab.activeBorder": "#ff0000",
        "tab.unfocusedActiveBorder": "#000000",
        "tab.activeBackground": "#26549e",
        // Make Github Copilot suggestions more obvious
        // https://github.com/orgs/community/discussions/7447
        "editorGhostText.border": "#ff0000",
        "editorGhostText.foreground": "#ff0000",
        // Make errors more obvious
        // https://stackoverflow.com/questions/40697223/how-to-change-error-styles-in-vs-code
        "editorError.foreground": "#000000", // don't show squiggly line
        "editorError.border": "#000000", // don't show additional border under squiggly line
        "editorError.background": "#800080", // fuchsia background
        "editor.wordHighlightTextBackground": "#20B2AA" // highlight same variable
    },
